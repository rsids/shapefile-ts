{
    "compileOnSave": false,
    "compilerOptions": {
      "rootDir": "lib",
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": false,
      "experimentalDecorators": false,
      "esModuleInterop": true,
      "importHelpers": true,
      "target": "es2020",
      "module": "esnext",
      "noImplicitAny": true,
      "lib": ["es2020", "dom"],
      "skipLibCheck": false,
      "skipDefaultLibCheck": true,
      "outDir": "dist",
      "typeRoots": ["./@types"],
      "baseUrl": "."
    },
  "exclude": ["node_modules", "tmp"]
  }
